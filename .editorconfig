# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs

# Top-most EditorConfig file
root = true


# Options below match all files (`*`).
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false
max_line_length = 79
trim_trailing_whitespace = true

# 8-tab indentation
indent_style = tab
indent_size = tab
tab_width = 8

[*.yml]
indent_style = space
indent_size = space
tab_width = 2